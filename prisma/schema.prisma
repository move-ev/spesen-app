// Prisma schema for Better Auth
// learn more: https://better-auth.com/docs/concepts/database

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

// NOTE: When using mysql or sqlserver, uncomment the //@db.Text annotations in model Account below
// Further reading:
// https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string

datasource db {
  provider = "postgresql"
}

enum ReportStatus {
  DRAFT
  IN_REVIEW
  EDIT_REQUIRED
  REJECTED
  APPROVED
  CLEARED
}

model Report {
  id     String       @id @default(cuid())
  title  String
  status ReportStatus @default(DRAFT)
  reason String

  businessUnitId String
  businessUnit   BusinessUnit @relation(fields: [businessUnitId], references: [id])

  accountingUnitId String
  accountingUnit   AccountingUnit @relation(fields: [accountingUnitId], references: [id])

  requestorId String
  requestor   User   @relation("ReportRequestor", fields: [requestorId], references: [id])

  reviewerId String?
  reviewer   User?   @relation("ReportReviewer", fields: [reviewerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments Comment[]
  expenses Expense[]

  @@map("report")
}

model BusinessUnit {
  id   String @id @default(cuid())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reports Report[]

  @@map("business_unit")
}

model AccountingUnit {
  id   String @id @default(cuid())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reports Report[]

  @@map("accounting_unit")
}

model CostAccount {
  id   String @id @default(cuid())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expenses Expense[]

  @@map("cost_account")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  reportId String
  report   Report @relation(fields: [reportId], references: [id])

  @@map("comment")
}

model Expense {
  id        String      @id @default(cuid())
  title     String
  amount    Decimal
  startDate DateTime
  endDate   DateTime
  type      ExpenseType
  reasoning String?

  reportId String
  report   Report @relation(fields: [reportId], references: [id])

  costAccountId String
  costAccount   CostAccount @relation(fields: [costAccountId], references: [id])

  // Optional one-to-one relations (only one will be populated based on type)
  receiptExpense ReceiptExpense?
  travelExpense  TravelExpense?
  mealExpense    MealExpense?

  @@map("expense")
}

enum ExpenseType {
  RECEIPT
  TRAVEL
  MEALS
}

model ReceiptExpense {
  id        String  @id @default(cuid())
  expenseId String  @unique
  expense   Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)

  attachments Attachment[]

  @@map("receipt_expense")
}

model Attachment {
  id  String @id @default(cuid())
  url String

  receiptExpenseId String
  receiptExpense   ReceiptExpense @relation(fields: [receiptExpenseId], references: [id], onDelete: Cascade)

  @@map("attachment")
}

model TravelExpense {
  id        String  @id @default(cuid())
  expenseId String  @unique
  expense   Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)

  startPoint String
  endPoint   String
  distance   Decimal

  @@map("travel_expense")
}

model MealExpense {
  id        String  @id @default(cuid())
  expenseId String  @unique
  expense   Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)

  discountBreakfast Int
  discountLunch     Int
  discountDinner    Int

  @@map("meal_expense")
}

model User {
  id            String    @id
  name          String //@db.Text
  email         String
  emailVerified Boolean   @default(false)
  image         String? //@db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]

  comments         Comment[]
  requestedReports Report[]  @relation("ReportRequestor")
  reviewedReports  Report[]  @relation("ReportReviewer")

  role       String?
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String? //@db.Text
  userAgent String? //@db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String //@db.Text
  providerId            String //@db.Text
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String? //@db.Text
  refreshToken          String? //@db.Text
  idToken               String? //@db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String? //@db.Text
  password              String? //@db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
}

model Verification {
  id         String   @id
  identifier String //@db.Text
  value      String //@db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
  @@index([identifier])
}
